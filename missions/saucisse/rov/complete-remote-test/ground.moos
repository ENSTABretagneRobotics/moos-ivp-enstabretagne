ServerHost = localhost
ServerPort = 9000
Community  = AUV

#include "piombino.moos"
#include "includes.moos"

ProcessConfig = ANTLER
{
  MSBetweenLaunches = 200
	
  Run = MOOSDB            @ NewConsole = false

  // ************** UTILITIES ****************
  Run = uMACView          @ NewConsole = false
  Run = uMS               @ NewConsole = false
  Run = uProcessWatch     @ NewConsole = false
  Run = uJoystick         @ NewConsole = true

  // ************** LOGS *********************
  Run = pShare            @ NewConsole = false ~pShareGroundAUVWifi
  Run = pShare            @ NewConsole = false ~pShareGroundAUVEthernet
}

ProcessConfig = uMS
{
  AppTick   = 20
  CommsTick = 20
}

ProcessConfig = uJoystick
{
  AppTick   = 20
  CommsTick = 20

  DEVICE_NAME = /dev/input/js0

  INCREMENT = false
  SCALE = 100

  AXIS = 1
  SCALE_RATIO = 0.04
  MOOS_DEST_VAR = DESIRED_FX

  AXIS = 2
  SCALE_RATIO = 0.01
  MOOS_DEST_VAR = DESIRED_RZ

  AXIS = 3
  SCALE_RATIO = 0.01
  MOOS_DEST_VAR = DESIRED_FZ
}
